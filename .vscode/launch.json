{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Driver Windows",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/driver.exe",
			"args": ["${workspaceFolder}/data/test-img2.pgm",
				"${workspaceFolder}/bin/test-img2_ws_filter.pgm",
				"3"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false
		},
		{
			"name": "Driver Linux",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/bin/driver.o",
			"args": ["${workspaceFolder}/data/custom3.pgm",
					 "${workspaceFolder}/bin/custome3_ws_filter.pgm",
					 "3"],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"externalConsole": false,
			"MIMode": "gdb",
			"setupCommands": [
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}